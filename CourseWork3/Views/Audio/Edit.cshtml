@model AudioFile

@{
	ViewData["Title"] = "Редактировать аудиофайл";
}

<h2>Редактирование аудиозаписи</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
	@Html.AntiForgeryToken()

	<div class="form-group">
		<label>Название</label>
		<input type="text" name="title" value="@Model.Title" class="form-control" required/>
	</div>

	<div class="form-group">
		<label>Автор</label>
		<input type="text" name="author" value="@Model.Author" class="form-control"/>
	</div>

	<div class="form-group">
		<label>Жанр</label>
		<input type="text" name="genre" value="@Model.Genre" class="form-control"/>
	</div>

	<button type="submit" class="btn btn-primary">Сохранить</button>
</form>