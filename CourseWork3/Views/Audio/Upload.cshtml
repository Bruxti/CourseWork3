@{
    ViewData["Title"] = "Загрузка аудио";
}

<h2>Загрузить аудиофайл</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div>
        <label>Название:</label>
        <input type="text" name="title" required />
    </div>

    <div>
    <label>Автор:</label>
        <input type="text" name="author" />
    </div>

    <div>
        <label>Жанр:</label>
        <input type="text" name="genre" />
    </div>
    <div>
        <label>Файл (MP3):</label>
        <input type="file" name="audioFile" accept=".mp3" required />
    </div>
    <button type="submit">Загрузить</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
        <p style="color: red;">@ViewData.ModelState.Values.SelectMany(v => v.Errors).FirstOrDefault()?.ErrorMessage</p>
}
    