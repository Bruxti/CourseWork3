@{
    ViewData["Title"] = "Загрузка аудио";
}

<h2>Загрузить аудиофайл</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="form-check">
    <input type="checkbox" class="form-check-input" id="isMusicOnly" name="isMusicOnly" />
    <label class="form-check-label" for="isMusicOnly">Музыкальный трек?</label>
</div>
    <div>
        <label>Название:</label>
        <input type="text" name="title" required />
    </div>

    <div>
    <div id="metadataFields" style="display: none;">
    <div class="form-group">
        <label for="genre">Жанр</label>
        <input type="text" class="form-control" name="genre" />
    </div>
    <div class="form-group">
        <label for="author">Автор</label>
        <input type="text" class="form-control" name="author" />
    </div>
</div>
    <div>
        <label>Файл (MP3):</label>
        <input type="file" name="audioFile" accept=".mp3" required />
    </div>
    <button type="submit">Загрузить</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
        <p style="color: red;">@ViewData.ModelState.Values.SelectMany(v => v.Errors).FirstOrDefault()?.ErrorMessage</p>
}
@section Scripts {
<script>
    const checkbox = document.getElementById('isMusicOnly');
    const metadataFields = document.getElementById('metadataFields');
    checkbox.addEventListener('change', () => {
            metadataFields.style.display = checkbox.checked ? 'block' : 'none';
    });
</script>}    